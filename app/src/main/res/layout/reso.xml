<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:paddingVertical="10dp"
    android:paddingLeft="5dp"
    android:paddingTop="10dp"
    android:paddingRight="5dp"
    android:paddingBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginHorizontal="3dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="17dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/im1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"

                        android:scaleType="center"
                        android:src="@drawable/news11" />
                </androidx.cardview.widget.CardView>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:layout_marginLeft="4dp"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/t1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"

                            android:fontFamily="@font/alegreya_sc"
                            android:text="HI this is text"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/t2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/alegreya_sc"
                            android:padding="10dp"
                            android:text="HI this is another text"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:textStyle="normal" />


                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:fontFamily="@font/alegreya_sc"
                            android:gravity="end|bottom"
                            android:padding="10dp"
                            android:text="HI this is another text"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:textStyle="normal">

                        </TextView>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingRight="10dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end"


                    android:background="@drawable/grade"
                    android:src="@drawable/share" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/read"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center|end"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"

                    android:background="@drawable/grade"
                    android:src="@drawable/read" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
